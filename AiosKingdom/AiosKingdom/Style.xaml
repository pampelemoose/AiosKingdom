                        <Label 
                            Grid.Column="2" 
                            FontAttributes="Bold" 
                            FontSize="16" 
                            VerticalOptions="Center" 
                            HorizontalOptions="Center" 
                            Text="Weight :" />

                        <Label 
                            Grid.Column="3" 
                            FontAttributes="Italic" 
                            FontSize="16" 
                            VerticalOptions="Center" 
                            HorizontalOptions="Start" 
                            Text="{Binding Weight, StringFormat='{0} kg'}}" />
                    </Grid>
                </Grid>
            </Frame>
        </ViewCell>
