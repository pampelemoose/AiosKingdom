                            FontAttributes="Bold" 
                            FontSize="16" 
                            VerticalOptions="Center" 
                            HorizontalOptions="Center" 
                            Text="Height :" />

                        <Label 
                            Grid.Column="1" 
                            FontAttributes="Italic" 
                            FontSize="16" 
                            VerticalOptions="Center" 
                            HorizontalOptions="Start" 
