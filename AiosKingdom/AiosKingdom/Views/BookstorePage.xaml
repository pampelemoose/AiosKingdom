<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ctrl="clr-namespace:AiosKingdom.Controls;"
             xmlns:vm="clr-namespace:AiosKingdom.ViewModels;"
             xmlns:cards="clr-namespace:PanCardView;assembly=PanCardView"
             x:Class="AiosKingdom.Views.BookstorePage"
             BackgroundColor="{StaticResource PrimaryColor_0}">
    <ContentView.BindingContext>
        <vm:BookstorePageViewModel />
    </ContentView.BindingContext>
    <ContentView.Content>
        <Grid
            ColumnSpacing="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="200" />
            </Grid.ColumnDefinitions>

            <Grid
                Grid.Column="0"
                Margin="5"
                IsVisible="{Binding PageIsSelected}"
                BackgroundColor="{Binding SelectedBook.Quality, Converter={StaticResource bookQualityToColor}}">
                <Grid
                    Margin="3"
                    BackgroundColor="{StaticResource PrimaryColor_1}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>

                    <cards:CarouselView 
                        Grid.Row="0"
                        ItemsSource="{Binding SelectedBook.Pages}"
                        VerticalOptions="FillAndExpand">
                        <cards:CarouselView.ItemTemplate>
                            <DataTemplate>
                                <ContentView>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="40"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <Grid
                                            Grid.Row="0"
                                            ColumnSpacing="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="40" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <Image
                                                Grid.Column="0"
                                                Source="{Binding ., Converter={StaticResource objectToImage}}" />
                                            <Grid
                                                BackgroundColor="{StaticResource PrimaryColor_3}"
                                                Grid.Column="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="4*"/>
                                                    <ColumnDefinition Width="2*"/>
                                                    <ColumnDefinition Width="4*"/>
                                                    <ColumnDefinition Width="2*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>

                                                <Label
                                                    Grid.Row="0"
                                                    Grid.Column="0"
                                                    FontSize="10"
                                                    TextColor="{StaticResource PrimaryColor_1}"
                                                    VerticalTextAlignment="Center"
                                                    Text="Ember Cost :"/>
                                                <Label
                                                    Grid.Row="0"
                                                    Grid.Column="1"
                                                    FontSize="12"
                                                    FontAttributes="Bold"
                                                    TextColor="{StaticResource PrimaryColor_1}"
                                                    VerticalTextAlignment="Center"
                                                    Text="{Binding EmberCost}"/>
                                                <Label
                                                    Grid.Row="0"
                                                    Grid.Column="2"
                                                    FontSize="10"
                                                    TextColor="{StaticResource PrimaryColor_1}"
                                                    VerticalTextAlignment="Center"
                                                    Text="Rank :"/>
                                                <Label
                                                    Grid.Row="0"
                                                    Grid.Column="3"
                                                    FontSize="12"
                                                    FontAttributes="Bold"
                                                    TextColor="{StaticResource PrimaryColor_1}"
                                                    VerticalTextAlignment="Center"
                                                    Text="{Binding Rank}"/>
                                                <Label
                                                    Grid.Row="1"
                                                    Grid.Column="0"
                                                    FontSize="10"
                                                    TextColor="{StaticResource PrimaryColor_1}"
                                                    VerticalTextAlignment="Center"
                                                    Text="Mana Cost :"/>
                                                <Label
                                                    Grid.Row="1"
                                                    Grid.Column="1"
                                                    FontSize="12"
                                                    FontAttributes="Bold"
                                                    TextColor="{StaticResource PrimaryColor_1}"
                                                    VerticalTextAlignment="Center"
                                                    Text="{Binding ManaCost}"/>
                                                <Label
                                                    Grid.Row="1"
                                                    Grid.Column="2"
                                                    FontSize="10"
                                                    TextColor="{StaticResource PrimaryColor_1}"
                                                    VerticalTextAlignment="Center"
                                                    Text="Cooldown :"/>
                                                <Label
                                                    Grid.Row="1"
                                                    Grid.Column="3"
                                                    FontSize="12"
                                                    FontAttributes="Bold"
                                                    TextColor="{StaticResource PrimaryColor_1}"
                                                    VerticalTextAlignment="Center"
                                                    Text="{Binding Cooldown}"/>
                                            </Grid>
                                        </Grid>

                                        <Label
                                            Grid.Row="1"
                                            FontAttributes="Italic"
                                            VerticalTextAlignment="Center"
                                            Text="{Binding Description}"/>

                                        <ListView
                                            Grid.Row="2"
                                            BackgroundColor="Transparent"
                                            ItemsSource="{Binding Inscriptions}"
                                            HasUnevenRows="True"
                                            SeparatorVisibility="None"
                                            ItemTemplate="{StaticResource InscriptionListItem}"/>
                                    </Grid>
                                </ContentView>
                            </DataTemplate>
                        </cards:CarouselView.ItemTemplate>
                    </cards:CarouselView>
                    <Grid
                        Grid.Row="1"
                        IsVisible="{Binding BookIsSelected}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="8*"/>
                        </Grid.ColumnDefinitions>

                        <Grid
                            Grid.Column="0"
                            BackgroundColor="{StaticResource PrimaryColor_3}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="5*"/>
                                <RowDefinition Height="7*"/>
                            </Grid.RowDefinitions>
                            <Label
                                Grid.Row="0"
                                FontSize="10"
                                VerticalTextAlignment="Center"
                                HorizontalTextAlignment="Center"
                                TextColor="{StaticResource PrimaryColor_1}"
                                Text="Price"/>

                            <Label
                                Grid.Row="1"
                                FontAttributes="Bold"
                                FontSize="10"
                                VerticalTextAlignment="Center"
                                HorizontalTextAlignment="Center"
                                TextColor="{StaticResource PrimaryColor_1}"
                                Text="{Binding SelectedBook, Converter={StaticResource bookToPrice}}"/>
                        </Grid>

                        <Button
                            Grid.Column="1"
                            Style="{StaticResource MenuButton}"
                            Text="Buy"
                            Command="{Binding BuyBookAction}"/>
                    </Grid>
                </Grid>
            </Grid>

