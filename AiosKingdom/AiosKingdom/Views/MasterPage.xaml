<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AiosKingdom.ViewModels;"
             x:Class="AiosKingdom.Views.MasterPage"
             Title="{Binding Title}">
    <ContentPage.BindingContext>
        <vm:MasterPageViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <Grid
            BackgroundColor="#02A8C4">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
            
            <ListView 
                Grid.Row="0"
                Style="{StaticResource MenuList}"
                ItemTemplate="{StaticResource MenuListItem}"
                ItemsSource="{Binding Menus}" 
                SelectedItem="{Binding SelectedItem, Mode=TwoWay}">

                <!--<ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid Padding="5,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>-->
                <!-- <Image Source="{Binding IconSource}" /> -->
                <!--
                                <Label 
                                    Style="{StaticResource MenuLabel}"
                                    Grid.Column="1" Text="{Binding Title}" />
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>-->

            </ListView>

            <Grid
                Grid.Row="1"
                Margin="5, 0, 5, 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="8*"/>
                    <ColumnDefinition Width="4*"/>
                </Grid.ColumnDefinitions>

                <Button
                    Grid.Column="0"
                    Style="{StaticResource MenuButton}"
                    Text="Disconnect"
                    Command="{Binding DisconnectAction}"/>

                <Button
                    Grid.Column="1"
                    Style="{StaticResource MenuButton}"
                    IsVisible="{Binding OnSoulList}"
                    Text="Souls"
                    Command="{Binding BackToSoulListAction}"/>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>