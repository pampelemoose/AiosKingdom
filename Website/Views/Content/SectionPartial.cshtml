@model DataModels.Website.Section

@if (Model != null)
{
    <section class="section">
        <div id="carouselHeader" class="carousel @(Model.Contents.Count > 1 ? "slide" : "")" data-ride="carousel">
            <ol class="carousel-indicators">
                @if (Model.Contents.Count > 1)
                {
                    for (int i = 0; i < Model.Contents.Count; ++i)
                    {
                        <li data-target="#carouselHeader" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
                    }
                }
            </ol>
            <div class="carousel-inner">
                @foreach (var banner in Model.Contents.Select((value, i) => new { i, value }))
                {
                    <div class="carousel-item @(banner.i == 0 ? "active" : "")" style="background-color: @banner.value.BackgroundColor">
                        @if (!string.IsNullOrEmpty(banner.value.Image))
                        {
                            <img class="d-block w-100" src="@banner.value.Image">
                        }
                        <div class="@(!string.IsNullOrEmpty(banner.value.Image) ? "carousel-caption" : "carousel-content") d-none d-md-block">
                            @banner.value.Content
                        </div>
                    </div>
                }
            </div>
            @if (Model.Contents.Count > 1)
            {
                <a class="carousel-control-prev" href="#carouselHeader" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselHeader" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            }
        </div>
    </section>
}
