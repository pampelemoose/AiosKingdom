@model List<DataModels.Kingdom>

@{
    ViewBag.Title = "Kingdoms";
}

<section>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h2>Kingdoms</h2>
            </div>
            @*
                <div class="col-md-6">
                    <div class="input-group input-group-sm">
                        <div class="input-group-prepend">
                            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "input-group-text" })
                        </div>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        <div class="input-group-append">
                            <input type="submit" value="Search" class="btn btn-primary btn-block" />
                            <button class="btn btn-primary dropdown-toggle dropdown-toggle-split" type="button" data-toggle="collapse" data-target="#filter-body" aria-expanded="false" aria-controls="filter-body">
                                <span class="sr-only">Toggle Dropdown</span>
                            </button>
                        </div>
                    </div>
                </div>
            *@
        </div>
    </div>
</section>

<section>
    <div class="container">
        <table class="table table-striped table-hover table-borderless">
            <thead>
                <tr>
                    <th>Name</th>
                    <th colspan="2">Level</th>
                    <th colspan="2">Max Level Count</th>
                    <th></th>
                </tr>
                <tr>
                    <th></th>
                    <th>Gap</th>
                    <th>Current</th>
                    <th>Gap</th>
                    <th>Current</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var kingdom in Model)
                {
                    @*
                        <tr onclick="location.href = '@(Url.Action("Details", "Monsters", new { id = monster.MonsterId }))'">
                    *@
                    <tr @(kingdom.CurrentMaxLevelCount >= kingdom.MaxLevelCountForGap ? "class=table-danger" : "")>
                        <td>
                            @kingdom.Name
                        </td>
                        <td>
                            @kingdom.LevelGap
                        </td>
                        <td>
                            @kingdom.CurrentMaxLevel
                        </td>
                        <td>
                            @kingdom.MaxLevelCountForGap
                        </td>
                        <td>
                            @kingdom.CurrentMaxLevelCount
                        </td>
                        <td>
                            @if (kingdom.CurrentMaxLevelCount >= kingdom.MaxLevelCountForGap)
                            {
                                @Html.ActionLink("Raise", "Raise", new { id = kingdom.Id }, new { @class = "btn btn-block btn-primary" })
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>