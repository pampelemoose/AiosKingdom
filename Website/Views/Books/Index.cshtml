@model Website.Models.Filters.BookFilter

@{
    ViewBag.Title = "Index";
}

@using (Html.BeginForm())
{
    <section>
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h2>Books</h2>
                </div>
                <div class="col-md-6">
                    <div class="input-group input-group-sm">
                        <div class="input-group-prepend">
                            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "input-group-text" })
                        </div>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        <div class="input-group-append">
                            <input type="submit" value="Search" class="btn btn-primary btn-block" />
                            <button class="btn btn-primary dropdown-toggle dropdown-toggle-split" type="button" data-toggle="collapse" data-target="#filter-body" aria-expanded="false" aria-controls="filter-body">
                                <span class="sr-only">Toggle Dropdown</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="bg-info collapse p-2" id="filter-body">
        <div class="container">
            <div class="row mt-2">
                <div class="col-md-3">
                    <div class="input-group input-group-sm">
                        <div class="input-group-prepend">
                            @Html.LabelFor(model => model.VersionList, htmlAttributes: new { @class = "input-group-text" })
                        </div>
                        @Html.DropDownListFor(model => model.SelectedVersion, new SelectList(Model.VersionList, "Id", null), new { @class = "form-control" })
                    </div>
                </div>
            </div>

            <div class="row mt-2">
                <div class="col-md-3">
                    <div class="input-group input-group-sm">
                        <div class="input-group-prepend">
                            @Html.LabelFor(model => model.Quality, htmlAttributes: new { @class = "input-group-text" })
                        </div>
                        @Html.EnumDropDownListFor(model => model.Quality, new { @class = "form-control" })
                    </div>
                </div>
            </div>

            <div class="row mt-2">
                <div class="offset-md-10 col-md-2">
                    <input type="submit" value="Filter" class="btn btn-default btn-block" />
                </div>
            </div>
        </div>
    </section>
}

<section>
    <div class="container">
        <div class="row">
            @foreach (var book in Model.Books)
            {
                <div class="card col-12 mt-2">
                    <div class="card-header" data-toggle="collapse" href="#@book.Id" aria-expanded="false" aria-controls="@book.Id">
                        <div class="row">
                            <div class="col-10">@book.Name</div>
                            <div class="col-2"><strong>@book.Quality</strong></div>
                        </div>
                    </div>
                    <div class="card-body collapse" id="@book.Id">
                        <div class="row">
                            <ul class="list-unstyled col-md-12">
                                @if (book.Pages != null)
                                {
                                    foreach (var page in book.Pages)
                                    {
                                        <li class="media mt-2 border border-primary">
                                            <img class="mr-3" src="@page.Image">
                                            <div class="media-body">
                                                <div class="row">
                                                    <div class="col-md-12 text-center font-weight-bold p-2">
                                                        @page.Description
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-4">
                                                        <div class="row">
                                                            <div class="col-8">Rank</div>
                                                            <div class="col-4"><strong>@page.Rank</strong></div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <div class="row">
                                                            <div class="col-8">StatCost</div>
                                                            <div class="col-4"><strong>@page.EmberCost</strong></div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <div class="row">
                                                            <div class="col-8">ManaCost</div>
                                                            <div class="col-4"><strong>@page.ManaCost</strong></div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <ul class="list-unstyled">
                                                    @if (page.Inscriptions != null)
                                                    {
                                                        foreach (var insc in page.Inscriptions)
                                                        {
                                                            <li class="media border border-success">
                                                                <div class="media-body">
                                                                    <div class="row">
                                                                        <div class="col-12 text-center font-weight-bold p-2">
                                                                            @insc.Description
                                                                        </div>
                                                                    </div>
                                                                    <div class="row">
                                                                        <div class="col-5">@insc.Type</div>
                                                                        <div class="col-1">@insc.BaseValue</div>
                                                                        <div class="col-4">@insc.StatType</div>
                                                                        <div class="col-1">@insc.Ratio</div>
                                                                        <div class="col-1">@insc.Duration</div>
                                                                    </div>
                                                                    @if (@insc.IncludeWeaponDamages)
                                                                    {
                                                                        <div class="row">
                                                                            <div class="col-4">
                                                                                @foreach (var type in insc.WeaponTypes)
                                                                                {
                                                                                    <span>@type</span>
                                                                                }
                                                                            </div>
                                                                            <div class="col-2">@insc.WeaponDamagesRatio</div>
                                                                            <div class="col-4">
                                                                                @foreach (var type in insc.PreferredWeaponTypes)
                                                                                {
                                                                                    <span>@type</span>
                                                                                }
                                                                            </div>
                                                                            <div class="col-2">@insc.PreferredWeaponDamagesRatio</div>
                                                                        </div>
                                                                    }
                                                                </div>
                                                            </li>
                                                        }
                                                    }

                                                </ul>
                                            </div>
                                        </li>
                                    }
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>