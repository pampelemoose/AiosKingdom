@model Website.Models.BookFilter

@{
    ViewBag.Title = "Index";
}

<h2>Books</h2>

<div class="row">
    <div class="card col-12">
        <div class="card-header" data-toggle="collapse" href="#filter-body" aria-expanded="false" aria-controls="filter-body">
            Filters
        </div>
        <div class="card-body collapse" id="filter-body">
            @using (Html.BeginForm())
            {
                <div class="form-row">
                    <hr />
                    <div class="form-group col-6">
                        @Html.LabelFor(model => model.VersionList, htmlAttributes: new { @class = "control-label" })
                        <div>
                            @Html.DropDownListFor(model => model.SelectedVersion, new SelectList(Model.VersionList, "Id", null), new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group col-6">
                        @Html.LabelFor(model => model.Quality, htmlAttributes: new { @class = "control-label" })
                        <div>
                            @Html.EnumDropDownListFor(model => model.Quality, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group col-6">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Filter" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div class="row mt-4">
    @foreach (var book in Model.Books)
    {
        <div class="card col-12 mt-2">
            <div class="card-header" data-toggle="collapse" href="#@book.Id" aria-expanded="false" aria-controls="@book.Id">
                <div class="row">
                    <div class="col-10">@book.Name</div>
                    <div class="col-2"><strong>@book.Quality</strong></div>
                </div>
            </div>
            <div class="card-body collapse" id="@book.Id">
                <div class="row">
                    <ul class="list-unstyled col-md-12">
                        @if (book.Pages != null)
                        {
                            foreach (var page in book.Pages)
                            {
                                <li class="media mt-2 border border-primary">
                                    <img class="mr-3" src="@page.Image">
                                    <div class="media-body">
                                        <div class="row">
                                            <div class="col-md-12 text-center font-weight-bold p-2">
                                                @page.Description
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="row">
                                                    <div class="col-8">Rank</div>
                                                    <div class="col-4"><strong>@page.Rank</strong></div>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="row">
                                                    <div class="col-8">StatCost</div>
                                                    <div class="col-4"><strong>@page.StatCost</strong></div>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="row">
                                                    <div class="col-8">ManaCost</div>
                                                    <div class="col-4"><strong>@page.ManaCost</strong></div>
                                                </div>
                                            </div>
                                        </div>
                                        <ul class="list-unstyled">
                                            @if (page.Inscriptions != null)
                                            {
                                                foreach (var insc in page.Inscriptions)
                                                {
                                                    <li class="media border border-success">
                                                        <div class="media-body">
                                                            <div class="row">
                                                                <div class="col-12 text-center font-weight-bold p-2">
                                                                    @insc.Description
                                                                </div>
                                                            </div>
                                                            <div class="row">
                                                                <div class="col-5">@insc.Type</div>
                                                                <div class="col-1">@insc.BaseValue</div>
                                                                <div class="col-4">@insc.StatType</div>
                                                                <div class="col-1">@insc.Ratio</div>
                                                                <div class="col-1">@insc.Duration</div>
                                                            </div>
                                                        </div>
                                                    </li>
                                                }
                                            }

                                        </ul>
                                    </div>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </div>
    }
</div>
