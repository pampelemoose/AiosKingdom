<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @{
        var controller = ViewContext.RouteData.GetRequiredString("controller");
        var action = ViewContext.RouteData.GetRequiredString("action");
    }
</head>
<body>
    <div id="loading_screen" style="display:none;">
        <div id="loader"></div>
    </div>

    <section class="fixed-top">
        @if (User.IsInRole("SuperAdmin"))
        {
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <div class="container">
                    <a class="navbar-brand" href="#">Admin</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown"
                                   role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Users</a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    @Html.ActionLink("List", "Index", "User", null, new { @class = "dropdown-item" })
                                </div>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown"
                                   role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Kingdoms</a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    @Html.ActionLink("Index", "Index", "Kingdoms", null, new { @class = "dropdown-item" })
                                </div>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown"
                                   role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">GameServers</a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    @Html.ActionLink("Create", "Create", "GameServers", null, new { @class = "dropdown-item" })
                                </div>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown"
                                   role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Armors</a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    @Html.ActionLink("Create", "Create", "Armors", null, new { @class = "dropdown-item" })
                                </div>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown"
                                   role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Consumables</a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    @Html.ActionLink("Create", "Create", "Consumables", null, new { @class = "dropdown-item" })
                                </div>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown"
                                   role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Bags</a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    @Html.ActionLink("Create", "Create", "Bags", null, new { @class = "dropdown-item" })
                                </div>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown"
                                   role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Weapons</a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    @Html.ActionLink("Create", "Create", "Weapons", null, new { @class = "dropdown-item" })
                                </div>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="item-dropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Market</a>
                                <div class="dropdown-menu" aria-labelledby="item-dropdown">
                                    @Html.ActionLink("Index", "Index", "Market", null, new { @class = "dropdown-item" })
                                    @Html.ActionLink("Create", "Create", "Market", null, new { @class = "dropdown-item" })
                                </div>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown"
                                   role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Books</a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    @Html.ActionLink("Create", "Create", "Books", null, new { @class = "dropdown-item" })
                                </div>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown"
                                   role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Monsters</a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    @Html.ActionLink("Create", "Create", "Monsters", null, new { @class = "dropdown-item" })
                                </div>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown"
                                   role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Dungeons</a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    @Html.ActionLink("Create", "Create", "Dungeons", null, new { @class = "dropdown-item" })
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        }

        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                @Html.ActionLink("AiosKingdom", "Index", "Home", null, new { @class = "navbar-brand" })
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="item-dropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Items</a>
                            <div class="dropdown-menu" aria-labelledby="item-dropdown">
                                @Html.ActionLink("Armors", "Index", "Armors", null, new { @class = "dropdown-item" })
                                @Html.ActionLink("Consumables", "Index", "Consumables", null, new { @class = "dropdown-item" })
                                @Html.ActionLink("Bags", "Index", "Bags", null, new { @class = "dropdown-item" })
                                @Html.ActionLink("Weapons", "Index", "Weapons", null, new { @class = "dropdown-item" })
                            </div>
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Books", "Index", "Books", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Monsters", "Index", "Monsters", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Dungeons", "Index", "Dungeons", null, new { @class = "nav-link" })
                        </li>
                    </ul>
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown"
                                   role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">@User.Identity.Name</a>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                                    @Html.ActionLink("Logout", "Logout", "Account", null, new { @class = "dropdown-item" })
                                </div>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nav-link" href="#" id="navbarDropdown"
                                   role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Register</a>
                                <div id="registration_panel" class="dropdown-menu dropdown-menu-right account-dropdown-menu" aria-labelledby="navbarDropdown">
                                    @Html.Partial("RegistrationPartial", new Website.Models.RegistrationView())
                                </div>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link btn btn-primary" href="#" id="navbarDropdown"
                                   role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Login</a>
                                <div id="login_panel" class="dropdown-menu dropdown-menu-right account-dropdown-menu" aria-labelledby="navbarDropdown">
                                    @Html.Partial("LoginPartial", new Website.Models.LoginView())
                                </div>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </section>

    <main role="main" class="@(User.IsInRole("SuperAdmin") ? "admin-section" : "")">
        <section class="section">
            <div class="container">
                @if (ViewBag.Alerts != null)
                {
                    foreach (var alert in ViewBag.Alerts)
                    {
                        <div class="alert alert-@alert.Type.ToString().ToLower() @(User.IsInRole("SuperAdmin") ? "mt-3" : "mt-2")">
                            @if (!string.IsNullOrEmpty(alert.Title))
                            {
                                <h4 class="alert-heading">
                                    @alert.Title
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </h4>
                            }
                            else
                            {
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            }
                            @alert.Message
                        </div>
                    }
                }
            </div>
        </section>

        @Html.Action("GetSection", "Content", new { action = action, controller = controller, before = true })
        @RenderBody()
        @Html.Action("GetSection", "Content", new { action = action, controller = controller })
    </main>

    <footer class="footer">
        <div class="container">
            <span>&copy; @DateTime.Now.Year - My ASP.NET Application</span>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/popper")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/sitejs")
    @RenderSection("scripts", required: false)
</body>
</html>
