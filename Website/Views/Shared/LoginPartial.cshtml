@model Website.Models.LoginView

@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { id = "login_form", @class = "px-4 py-3" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(model => model.IsModal)

    <div class="form-group">
        <div>
            @Html.EditorFor(model => Model.LogUsername, new { htmlAttributes = new { @class = "form-control", placeholder = "Username" } })
            @Html.ValidationMessageFor(model => Model.LogUsername, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div>
            @Html.PasswordFor(model => Model.LogPassword, new { @class = "form-control", placeholder = "Password" })
            @Html.ValidationMessageFor(model => Model.LogPassword, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Log In" class="btn btn-default btn-block" />
    </div>
}