@model Website.Models.Filters.DungeonFilter

@{
    ViewBag.Title = "Dungeons";
}

<section>
    <div class="container">
        <h2>Dungeons</h2>
    </div>
</section>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <section class="bg-info">
            <div class="container">
                <table class="table">
                    <thead>
                        <tr class="row" data-toggle="collapse" href="#filter-body" aria-expanded="false" aria-controls="filter-body">
                            <th scope="col" class="col-md-11">
                                Filters
                            </th>
                            <th scope="col" class="col-md-1"></th>
                        </tr>
                    </thead>
                    <tbody id="filter-body" class="collapse">
                        <tr class="row">
                            <td class="col-md-2">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.VersionList, htmlAttributes: new { @class = "control-label" })
                                    @Html.DropDownListFor(model => model.SelectedVersion, new SelectList(Model.VersionList, "Id", null), new { @class = "form-control" })
                                </div>
                            </td>
                            <td class="offset-md-8 col-md-2">
                                <input type="submit" value="Filter" class="btn btn-default btn-block" />
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </section>
    </div>
}
<section>
    <div class="container">
        <ul class="list-unstyled">
            @foreach (var dungeon in Model.Dungeons)
            {
                <li class="media align-items-center">
                    @*<img class="mr-3" src="@monster.Image" height="64" width="64" />*@
                    <div class="media-body row">
                        <div class="col-md-10">
                            <h3 class="mt-0">@dungeon.Name</h3>
                        </div>
                        <div class="col-md-1">
                            @dungeon.RequiredLevel
                        </div>
                        <div class="col-md-1">
                            @dungeon.MaxLevelAuthorized
                        </div>
                    </div>
                </li>
            }
        </ul>
    </div>
</section>