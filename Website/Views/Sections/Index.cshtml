@model List<DataModels.Website.Section>

@{
    ViewBag.Title = "Index";
}

<section>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h2>Sections
            </div>
        </div>
    </div>
</section>

@if (Model != null)
{
    <section>
        <div class="container">
            <table class="table table-striped table-hover table-borderless">
                <thead>
                    <tr>
                        <th class="text-center">Controller</th>
                        <th class="text-center">Action</th>
                        <th class="text-center">Order</th>
                        <th class="text-center">Type</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var sec in Model)
                    {
                    <tr onclick="location.href = '@(Url.Action("Edit", "Sections", new { id = sec.Id }))'">
                        <td>
                            <div class="text-center">
                                @sec.Controller
                            </div>
                        </td>
                        <td>
                            <div class="text-center">
                                @sec.Action
                            </div>
                        </td>
                        <td>
                            <div class="text-center">
                                @sec.Order
                            </div>
                        </td>
                        <td>
                            <div class="text-center">
                                @sec.Type
                            </div>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>
}

