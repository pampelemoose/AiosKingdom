@model DataModels.Monsters.MonsterType?

<div class="col-md-12 mt-1">
    @using (Html.BeginCollectionItem("Types"))
    {
        <div class="row">
            <div class="col-md-10">
                <div class="input-group input-group-sm">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            Type
                        </div>
                    </div>
                    @Html.EnumDropDownListFor(model => model, new { @class = "form-control item-list-changer" })
                </div>
                @Html.ValidationMessageFor(model => model, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-2">
                <button type="button" class="close" aria-label="Close" onclick="$(this).parent().parent().parent().remove();">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    }
</div>
