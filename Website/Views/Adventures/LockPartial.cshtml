@model Website.Models.LockModel

<div class="col-md-12 mt-2">
    @using (Html.BeginCollectionItem("Locks"))
    {
        <div class="card card-dark">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="input-group input-group-sm">
                            <div class="input-group-prepend">
                                @Html.LabelFor(model => model.LockedId, htmlAttributes: new { @class = "input-group-text" })
                            </div>
                            @Html.DropDownListFor(model => model.LockedId, new SelectList(DataRepositories.AdventureRepository.GetAll(), "AdventureId", "Name"), new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(model => model.LockedId, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <button type="button" class="close" aria-label="Close" onclick="$(this).parent().parent().parent().remove();">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    }
</div>
